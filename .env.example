# Database
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Next.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="https://your-domain.railway.app"
NEXT_PUBLIC_BASE_URL="http://localhost:9000"

# Email Service (Resend) - https://resend.com
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxx"
EMAIL_FROM="noreply@ticketcap.com"

# JWT Secret (for email verification and password reset tokens)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"

# Israeli PPL Compliance (Amendment 13, August 2025)
# Encryption key for PII data (phone numbers, emails)
# Generate with: openssl rand -base64 32
# REQUIRED: Must be at least 32 characters
ENCRYPTION_KEY="your-super-secret-encryption-key-minimum-32-chars"

# Google OAuth (Optional) - https://console.cloud.google.com
GOOGLE_CLIENT_ID="xxxxxxxxxxxxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="xxxxxxxxxxxxx"

# Google Analytics (Optional) - https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Stripe (Tier 1: Platform Subscription - Future Phase 2)
# Test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxx"

# YaadPay (Tier 2: Event Ticketing - Current Implementation)
# Israeli payment gateway for event registrations
# Get credentials from: https://Pay.hyp.co.il/p/?action=login
# ⚠️ WARNING: Never commit real API secrets to Git. Keep these values secret.
YAADPAY_MASOF="your-yaadpay-masof-terminal-number"  # Terminal number from YaadPay dashboard
YAADPAY_API_SECRET="your-yaadpay-api-secret-from-dashboard"  # API secret for validation (DO NOT SHARE)
YAADPAY_DOMAIN_ID="your-yaadpay-domain-id"  # Domain ID from YaadPay dashboard
YAADPAY_BASE_URL="https://yaadpay.co.il/p/"  # Payment page URL (or https://pay.leumicard.co.il/p/)
YAADPAY_TEST_MODE="false"  # Set to "true" to use test terminal (Masof=4500481839)
YAADPAY_MOCK_MODE="false"  # Set to "true" to bypass YaadPay and simulate successful payments (local dev only - NEVER in production)

# Railway automatically provides DATABASE_URL when you add PostgreSQL service

# Logging Configuration
# LOG_LEVEL: debug, info, warn, error (default: "info" in production, "debug" in development)
LOG_LEVEL="info"
# PINO_PRETTY: Enable pretty-printed logs in development (default: "true" in development)
PINO_PRETTY="true"

# Golden Path Canary (Production Health Check)
# These credentials are used by automated hourly tests to verify production is working
# Create a dedicated "canary" admin account in production for this purpose
CANARY_ADMIN_EMAIL=canary@example.com
CANARY_ADMIN_PASSWORD=