{
  "name": "ticketcap",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 9000",
    "dev:clean": "bash scripts/dev-clean.sh",
    "dev:start": "bash scripts/dev-with-check.sh",
    "build": "prisma generate && next build",
    "build:production": "prisma generate && SKIP_ENV_VALIDATION=true next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "start:prod": "npx prisma migrate deploy && next start",
    "test:db": "node scripts/test-db-and-migrate.js",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "playwright test",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest watch",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:p0": "playwright test tests/suites/*-p0.spec.ts",
    "test:canary": "playwright test tests/golden-path/",
    "test:security": "playwright test tests/security/security-compliance.spec.ts",
    "test:security:ui": "playwright test tests/security/security-compliance.spec.ts --ui",
    "test:security:report": "playwright test tests/security/security-compliance.spec.ts --reporter=html",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:setup": "node scripts/setup-production-db.js",
    "db:deploy": "chmod +x scripts/deploy-db.sh && scripts/deploy-db.sh",
    "db:status": "npx prisma migrate status",
    "school": "tsx scripts/school-manager.ts",
    "school:seed": "tsx scripts/school-manager.ts seed",
    "cleanup:retention": "tsx scripts/data-retention-cleanup.ts",
    "encrypt:existing": "tsx scripts/encrypt-existing-data.ts",
    "encrypt:check": "tsx scripts/encrypt-existing-data.ts --dry-run",
    "collect-metrics": "tsx scripts/collect-metrics.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@paralleldrive/cuid2": "^3.0.6",
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.3",
    "@types/zxcvbn": "^4.4.5",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.24",
    "google-auth-library": "^10.5.0",
    "googleapis": "^165.0.0",
    "html5-qrcode": "^2.3.8",
    "jose": "^6.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.9",
    "nodemailer": "^7.0.10",
    "pkce-challenge": "^5.0.1",
    "prisma": "^6.16.2",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "resend": "^6.4.2",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "tsx": "^4.20.6",
    "zod": "^4.1.9",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "form-data": "^4.0.4",
    "happy-dom": "^16.8.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "typescript": "^5",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
